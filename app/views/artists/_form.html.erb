<div class="b-t">
  <div class="center-block w-auto-xs p-y-md text-center">
    <div class="p-a-md">
    <%= form_for(@artist, html: { multipart: true }, turboboost: true) do |f| %>
    <%=content_for :devise_error  do %>
      <% artist.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
  <% end %>
<div class="col-md-6">
  <div class="form-group">
    <%= f.hidden_field :user_id, value: current_user.id%>
  </div>

  <div class="form-group">
    <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name", required: true %>
  </div>
    
  <div class="form-group">
    <%= f.text_field :last_name, class:"form-control", placeholder: "Last Name", required: true %>
  </div>

  <div class="form-group">
    <%= f.text_field :stage_name, placeholder: "Stage Name", class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.text_field :talent, placeholder: "What do you do? ie Producer, DJ, Singer etc", class:"form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.text_area :bio, placeholder: "Tell us more about yourself and your musical journey..", size: "6x4", class: "form-control", required: true%>
  </div>
  </div>
  <div class="col-md-6">
<div class="form-group">
  <h5><label for="file">Upload Profile Picture</label></h5>
      <%= f.file_field :avatar, id: "file"%>
      </div>
      <div class="form-group">
  <h5><label for="file">Upload Cover Photo</label></h5>
      <%= f.file_field :cover_photo, id: "file2"%>
      </div>
<h3> Link your Social Media Profiles </h3>
  <div class="form-group">
    <%= f.text_field :fb_link, class: "form-control", placeholder: "Facebook Profile Link"  %>
  </div>

  <div class="form-group">
    <%= f.text_field :twitter, class: "form-control", placeholder: "Twitter Profile Link" %>
  </div>

  <div class="form-group">
    <%= f.text_field :soundclound, class: "form-control", placeholder: "Sound Cloud Profile Link" %>
  </div>
</div>
  <%= f.submit "Submit",class: "btn btn-lg black p-x-lg btn-block"%>
<% end %>
    </div>
  </div>
</div>

